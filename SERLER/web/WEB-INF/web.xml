<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>input.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAll</servlet-name>
        <servlet-class>output.DisplayAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowArticleDetail</servlet-name>
        <servlet-class>output.ShowArticleDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfidenceServlet</servlet-name>
        <servlet-class>input.ConfidenceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvidenceItemServlet</servlet-name>
        <servlet-class>input.EvidenceItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>input.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LayoutServlet</servlet-name>
        <servlet-class>classes.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>output.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAll</servlet-name>
        <url-pattern>/DisplayAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowArticleDetail</servlet-name>
        <url-pattern>/ShowArticleDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfidenceServlet</servlet-name>
        <url-pattern>/ConfidenceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvidenceItemServlet</servlet-name>
        <url-pattern>/EvidenceItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LayoutServlet</servlet-name>
        <url-pattern>/LayoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home_page.html</welcome-file>
    </welcome-file-list>
</web-app>
